<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <runtime>
    <!-- NumericUpDownのCOMアクセシビリティ問題を回避 -->
    <legacyCorruptedStateExceptionsPolicy enabled="true" />
  </runtime>
  <system.diagnostics>
    <switches>
      <!-- MDA (Managed Debugging Assistant) を無効化 -->
      <add name="NonComVisibleBaseClass" value="0" />
    </switches>
  </system.diagnostics>
</configuration>
